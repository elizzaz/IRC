<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <link rel="stylesheet" href="chat.css">
    <title>Chat</title>
</head>
<body>

    <div class="app">
        <img src="chat-box.png" class="chatTitle"></img>


        <div class="container">
            <div class="channelList">
                <!--<h1>Liste des channels</h1>-->
                <ul id="roomList">
                    <% channels.forEach(channel => { %>
                    <li onclick="_joinRoom('<%=channel.name%>')" class="elementList" id="<%=channel.name%>"><%= channel.name %></li>
                    <% }); %>
                </ul>
            </div>
        </div>
        <div class="display">
            <div class="msgContainer" id="msgContainer"></div>
        </div>
        
      <!--  <div id="isWritting"></div> -->
        <form action="/chat" method="POST" id="chatForm">
            <input type="text" id="msgInput">
            <select name="receiver" id="receiverInput">
                <option value="all">A tous</option>
                <% users.forEach(user => { %>
                    <option value="<%= user.pseudo %>"><%= user.pseudo %></option>
                <% }); %>
            </select>
            <input type="submit" id="btnSend" value="Envoyer">
        </form>
        <div id="test"><p></p></div>

        <div class="hidden" id="channellist">
        <% channels.forEach(channel=> { %>

            <p>
            
            <%= channel.name %>
            
            </p>
            
            <% }); %>
        </div>
        <div class="hidden" id="userlist">
            <% users.forEach(user=> { %>
    
                <p>
                
                <%= user.pseudo %>
                
                </p>
                
                <% }); %>
            </div>
           
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="chat.js"></script>
</body>
</html>